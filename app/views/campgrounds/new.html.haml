.campground-form
  %h3 New Campground
  = form_for @campground, html: { class: 'form-horizontal' } do |f|
    .control-group
      %label.control-label Name
      .controls
        = f.text_field :name, class: 'form-control'
    .control-group
      %label.control-label City
      .controls
        = f.select :city_id, options_from_collection_for_select(City.default_query, :id, :name), {}, class: 'form-control'
    .control-group
      %label.control-label Public Park
      .controls
        True
        = f.radio_button :public_park, true
        False
        = f.radio_button :public_park, false
        
    .control-group
      %label.control-label Cost Per Night
      .controls
        = f.text_field :cost_per_night, class: 'form-control'
    .control-group
      .controls
        %button.btn{type: 'submit'}
          Submit